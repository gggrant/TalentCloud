{% extends "layouts/core" %}

{% block title %}

	Talent Cloud's Design System

{% endblock %}

{% block body %}

	{# Title #}

		<div class="bg-slate center triple-padding">

			<h1 class="bold white margin--bottom">Talent Cloud</h1>

			<h5 class="white">Design Framework</h5>

		</div>

	{# Methodologies #}

		<div class="container--layout triple-padding--top">

			<h2 class="center margin--bottom">Methods</h2>

			<hr>

		</div>

		<div class="container--copy double-padding--top">

			<p>Things!</p>

		</div>

	{# Palette #}

		<div class="container--layout triple-padding--top">

			<h2 class="center margin--bottom">Palette</h2>

			<hr class="double-margin--bottom">

			<div class="flex-grid gutter">

				{# Slate #}

					<div class="box gutter b-1of2 tp-1of3 dm-1of6">

						<div class="design-system__palette rounded bg-slate">

							<div>

								<h4 class="bold white margin--bottom">Slate</h4>

								<span class="white">#1E1E1E</span>

							</div>

						</div>

					</div>

				{# Plum #}

					<div class="box gutter b-1of2 tp-1of3 dm-1of6">

						<div class="design-system__palette rounded bg-plum">

							<div>

								<h4 class="bold white margin--bottom">Plum</h4>

								<span class="white">#5B1647</span>

							</div>

						</div>

					</div>

				{# Wine #}

					<div class="box gutter b-1of2 tp-1of3 dm-1of6">

						<div class="design-system__palette rounded bg-wine">

							<div>

								<h4 class="bold white margin--bottom">Wine</h4>

								<span class="white">#96043E</span>

							</div>

						</div>

					</div>

				{# Crimson #}

					<div class="box gutter b-1of2 tp-1of3 dm-1of6">

						<div class="design-system__palette rounded bg-crimson">

							<div>

								<h4 class="bold white margin--bottom">Crimson</h4>

								<span class="white">#C90035</span>

							</div>

						</div>

					</div>

				{# Sunrise #}

					<div class="box gutter b-1of2 tp-1of3 dm-1of6">

						<div class="design-system__palette rounded bg-sunrise">

							<div>

								<h4 class="bold white margin--bottom">Sunrise</h4>

								<span class="white">#F96548</span>

							</div>

						</div>

					</div>

				{# White #}

					<div class="box gutter b-1of2 tp-1of3 dm-1of6">

						<div class="design-system__palette rounded bg-white">

							<div>

								<h4 class="bold margin--bottom">White</h4>

								<span>#FFFFFF</span>

							</div>

						</div>

					</div>

				{# Color Progression #}

					<div class="box gutter b-full ds-4of6">

						<div class="flex-grid gutter">

							{# Gradient #}

								<div class="box b-full">

									<div class="design-system__gradient rounded bg-rise">

										<div>

											<span class="white">Gradient</span>

										</div>

									</div>

								</div>

							{# Stepped #}

								<div class="box b-1of2 tp-1of4">

									<div class="design-system__progress bg-plum">

										<div>

											<span class="white bold">Step<br>01</span>

										</div>

									</div>

								</div>

								<div class="box b-1of2 tp-1of4">

									<div class="design-system__progress bg-wine">

										<div>

											<span class="white bold">Step<br>02</span>

										</div>

									</div>

								</div>

								<div class="box b-1of2 tp-1of4">

									<div class="design-system__progress bg-crimson">

										<div>

											<span class="white bold">Step<br>03</span>

										</div>

									</div>

								</div>

								<div class="box b-1of2 tp-1of4">

									<div class="design-system__progress bg-sunrise">

										<div>

											<span class="white bold">Step<br>04</span>

										</div>

									</div>

								</div>

						</div>

					</div>

				{# Grayscale #}

					<div class="box gutter fit b-full ds-2of6">

						<div class="flex-grid rounded design-system__grayscale">

							<div class="box fit b-1of2">

							</div>

							<div class="box fit b-1of2 bg-gray--dark">
								
							</div>

							<div class="box fit b-1of2 bg-gray--light">
								
							</div>

							<div class="box fit b-1of2 bg-white">
								
							</div>

						</div>

					</div>

			</div>

		</div>

	{# Typography #}

		<div class="container--layout triple-padding--top">

			<h2 class="center margin--bottom">Typography</h2>

			<hr>

		</div>

		<div class="container--copy double-padding--top">

			<h3 class="bold margin--bottom">Open Sans by Steve Matteson</h3>

			<h4 class="crimson margin--bottom">Apache License 2.0</h4>

