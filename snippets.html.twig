{# Form Input =============================================================== #}

    {# Float #}

        <div
            class="box full">

            <div 
                class="form__input-wrapper--float {% if sample.name == true %}active{% endif %}">
                <label 
                    class="form__label" 
                    for="">
                    {{ sample_template.name_label }}
                </label>
                <input
                    class="form__input"
                    id=""
                    type="text"
                    value="{{ sample.name }}" />
            </div>

        </div>

    {# Date #}

        <div
            class="box med-1of2">

            <div 
                class="form__input-wrapper--date">

                <label 
                    class="form__label"
                    for="">
                    Accepting Applications From
                </label>

                <input
                    class="form__input"
                    id=""
                    type="date"
                    value="{{ manager.post.post_start }}">

            </div>

        </div>

    {# Textarea #}

        <div
            class="box full">

            <div 
                class="form__input-wrapper--float {% if experience.description != null%}active{% endif %}">

                <label 
                    class="form__label"
                    for="">
                    {{ application.experience.description_label }}
                </label>

                <textarea 
                    class="form__textarea" 
                    id="">{{ experience.description }}</textarea>

            </div>

        </div>

{# Form Select ============================================================== #}

    <div
        class="box med-1of2">

        <div 
            class="form__input-wrapper--select">
            <label 
                class="form__label" 
                for="">
                {{ sample_template.type_label }}
            </label>
            <div
                class="form__select-wrapper fas fa-chevron-down">
                <select
                    class="form__input">
                    {% for option in sample_template.types %}
                        <option
                            {% if sample.type|capitalize == option|capitalize %}selected="selected"{% endif %}
                            >{{ option }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>

    </div>

{# Radio Group ============================================================== #}

    <div
        class="box full">

        <div
            aria-orientation="horizontal"
            class="form__radio-group" 
            role="radiogroup">

            <label 
                class="form__label"
                for="">
                Group Label
            </label>

            <div class="flex-grid">

                {% set counter = 0 %}

                {% for item in array %}

                    {% set counter = counter + 1 %}

                    <label 
                        class="box form__radio-group-label small-1of{{ array|length }}"
                        for="">
                        <span 
                            class="hidden">
                            {{ item }}
                        </span>
                        <input 
                            class="form__radio-group-input"
                            id=""
                            name=""
                            type="radio"
                            {% for userItem in user.array %}
                                {% if userItem.id == item.id %}
                                    {% if userItem.value == counter %}
                                        checked
                                    {% endif %}
                                {% endif %}
                            {% endfor %}/>
                        <span 
                            class="form__radio-group-span">
                            {{ item }}
                        </span>
                    </label>

                {% endfor %}

            </div>

        </div>

    </div>

{# Accordion ================================================================ #}

    <div
        class="application-post__accordion accordion active">

        <div
            aria-expanded="true"
            class="accordion-trigger"
            tabindex="0">

            <div 
                class="accordion-status">

                <i class="fas fa-check"></i>

                <i class="fas fa-exclamation-circle"></i>

            </div>

            <span
                class="accordion-title">
                Accordion Title
            </span>

            <i class="fas fa-chevron-up"></i>

        </div>

        <div
            aria-hidden="false"
            class="accordion-content">

            <div
                class="form__wrapper">
                Form
            </div>

            <div
                class="accordion-actions flex-grid">

                <div
                    class="box med-1of2">
                    <button
                        class="button--red light-bg">
                        Delete This
                    </button>
                </div>

                <div
                    class="box med-1of2">
                    <button
                        class="button--blue light-bg">
                        Save This
                    </button>
                </div>

            </div>

        </div>

    </div>
